#include <iostream>
using namespace std;

// Node definition
struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(nullptr) {}
};

// Create list of n nodes
Node* createList(int n) {
    if (n <= 0) return nullptr;
    int val;
    cout << "Enter value for node 1: ";
    cin >> val;
    Node* head = new Node(val);
    Node* curr = head;
    for (int i = 2; i <= n; ++i) {
        cout << "Enter value for node " << i << ": ";
        cin >> val;
        curr->next = new Node(val);
        curr = curr->next;
    }
    return head;
}

// Count number of nodes
int countNodes(Node* head) {
    int count = 0;
    while (head) {
        ++count;
        head = head->next;
    }
    return count;
}

// Print all node values
void printList(Node* head) {
    while (head) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}

// Add node at specific position
void addNode(Node*& head, int val, int pos) {
    Node* newNode = new Node(val);
    if (pos == 1) { // Add at first
        newNode->next = head;
        head = newNode;
        return;
    }
    Node* curr = head;
    for (int i = 1; curr && i < pos - 1; i++)
        curr = curr->next;
    if (curr) {
        newNode->next = curr->next;
        curr->next = newNode;
    }
}

// Delete node at specific position
void deleteNode(Node*& head, int pos) {
    if (!head) return;
    Node* temp;
    if (pos == 1) { // First
        temp = head;
        head = head->next;
        delete temp;
        return;
    }
    Node* curr = head;
    for (int i = 1; curr->next && i < pos - 1; i++)
        curr = curr->next;
    if (curr->next) {
        temp = curr->next;
        curr->next = curr->next->next;
        delete temp;
    }
}

// Search for element
int search(Node* head, int key) {
    int pos = 1;
    while (head) {
        if (head->data == key)
            return pos;
        head = head->next;
        ++pos;
    }
    return -1; // Not found
}

// Example usage
int main() {
    int n;
    cout << "Enter number of nodes: ";
    cin >> n;
    Node* head = createList(n);

    cout << "List: ";
    printList(head);

    cout << "Number of nodes: " << countNodes(head) << endl;

    cout << "Add node at position 1 with value 99.
";
    addNode(head, 99, 1);
    printList(head);

    cout << "Delete node at position 1.
";
    deleteNode(head, 1);
    printList(head);

    int key;
    cout << "Enter value to search: ";
    cin >> key;
    int pos = search(head, key);
    if (pos > 0)
        cout << key << " found at position " << pos << endl;
    else
        cout << key << " not found
";

    return 0;
}
