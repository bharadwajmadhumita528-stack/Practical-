#include <stdio.h>

// Binary search: look in the middle first, always a sorted array!
int binarySearch(int arr[], int n, int target) {
    int left = 0, right = n - 1;
    while (left <= right) {
        int mid = left + (right - left) / 2; // Find the middle
        if (arr[mid] == target)
            return mid; // Found
        else if (arr[mid] < target)
            left = mid + 1; // Look in right half
        else
            right = mid - 1; // Look in left half
    }
    return -1; // Not found
}
